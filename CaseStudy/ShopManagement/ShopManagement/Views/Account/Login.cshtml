@model LoginViewModel

@{
    ViewBag.Title = "Login";
}


<section class="ftco-section">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6 text-center mb-5">
                <h2 class="heading-section">Login</h2>
                <div asp-validation-summary="All" class="text-danger"></div>
            </div>
        </div>
        <div class="row justify-content-center">
            <div class="col-md-12 col-lg-10">
                    <div class="login-wrap p-4 p-md-5">
                        <div class="d-flex">
                            <div class="w-100">
                                <h3 class="mb-4">Sign In</h3>
                            </div>
                            <div class="w-100">
                                <p class="social-media d-flex justify-content-end">
                                    <a src="fb.com" class="social-icon d-flex align-items-center justify-content-center"><span class="fa fa-facebook"></span></a>
                                    <a href="#" class="social-icon d-flex align-items-center justify-content-center"><span class="fa fa-twitter"></span></a>
                                </p>
                            </div>
                        </div>
                        <form method="post" class="signin-form">
                            <div class="form-group mb-3">
                                <label class="label" asp-for="Email"></label>
                                <input asp-for="Email" class="form-control" placeholder="Email" required>
                                <span asp-validation-for="Email"></span>
                            </div>
                            <div class="form-group mb-3">
                                <label class="label" asp-for="Password">Password</label>
                                <input asp-for="Password" class="form-control" placeholder="Password" required>
                           
                            </div>
                            <div class="form-group">
                                <button type="submit" class="form-control btn btn-primary rounded submit px-3">Sign In</button>
                            </div>
                            <div class="form-group d-md-flex">
                                <div class="w-50 text-left">
                                    <label class="checkbox-wrap checkbox-primary mb-0">
                                        Remember Me
                                        <input asp-for="RememberMe" checked>
                                        <span class="checkmark"></span>
                                    </label>
                                </div>
                                
                            </div>
                        </form>
                        <p class="text-center">Not a member? <a asp-controller="Account" asp-action="Register">Sign Up</a></p>
                    </div>
               
            </div>
        </div>
    </div>
</section>


@section Login {
    <script src="~/LoginLibaries/js/jquery.min.js"></script>
    <script src="~/LoginLibaries/js/popper.js"></script>
    <script src="~/LoginLibaries/js/bootstrap.min.js"></script>
    <script src="~/LoginLibaries/js/main.js"></script>
}
