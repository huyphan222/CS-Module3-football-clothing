@model EmployeePage.Paginations.Pagination<IndexViewModel>

@{
    ViewBag.Title = "Home";

}

<!-- Page Content -->
<div class="container">

    <div class="row">

        <div class="col-lg-3">

            <h1 class="my-4">FootBall Shop</h1>
            <div class="list-group">
                @foreach (var item in Model.CategoriesList)
                {
                    <a asp-controller="home" asp-action="Category" asp-route-id="@item.CategoryId" class="list-group-item">@item.Name</a>
                }

            </div>

        </div>
        <!-- /.col-lg-3 -->

        <div class="col-lg-9">

            <div id="carouselExampleIndicators" class="carousel slide my-4" data-ride="carousel">
                <ol class="carousel-indicators">
                    <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                    <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                    <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
                </ol>
                <div class="carousel-inner" role="listbox">
                    <div class="carousel-item active">
                        <img class="d-block img-fluid" src="~/images/Banner1.png" style="width:900px;height:312px;" alt="First slide">
                    </div>
                    <div class="carousel-item">
                        <img class="d-block img-fluid" src="~/images/banner2.jpg" style="width:900px;height:312px;" alt="Second slide">
                    </div>
                    <div class="carousel-item">
                        <img class="d-block img-fluid" src="~/images/slider.jpg" style="width:900px;height:312px;" alt="Third slide">
                    </div>
                </div>
                <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
            <div class="row">

                @if (Model.ListItems.Any())
                {
                    @foreach (var product in Model.ListItems)
                    {

                        var photoPath = "~/images/" + (product.Photo ?? "contact-img.jpg");
                        <div class="col-lg-4 col-md-6 mb-4">
                            <div class="card h-100">
                                <a asp-controller="home" asp-action="Detail" asp-route-id="@product.ProductId"><img class="card-img-top" src="@photoPath" asp-append-version="true" alt=""></a>
                                <div class="card-body">
                                    <p class="card-title">
                                        <a asp-controller="home" asp-action="Detail" asp-route-id="@product.ProductId">@product.Name</a>
                                    </p>
                                    <h5>Price: @product.OrigialPrice</h5>
                                    <p class="card-text"> @product.Description</p>
                                </div>
                                <div class="card-footer">
                                    <a asp-controller="Cart" asp-action="AddToCart" asp-route-ProductId="@product.ProductId" class="btn btn-success">Add to Cart</a>
                                </div>
                            </div>
                        </div>

                    }
                }
                else
                {
                    <h2>Không có sản phẩm nào cả</h2>
                }




                <div class="col-12">
                    <ul class="pagination">
                        <li class="@(Model.Pager.CurrentPage == 1 ? "page-item disabled" : "page-item")"><a class="page-link" asp-controller="Home" asp-action="index" asp-route-currenPage="1">First</a></li>
                        <li class="@(Model.Pager.CurrentPage == 1 ? "page-item disabled" : "page-item")"><a class="page-link" asp-controller="Home" asp-action="index" asp-route-currenPage="@(Model.Pager.CurrentPage-1)">Previous</a></li>
                        @for (int i = Model.Pager.StartPage; i <= Model.Pager.EndPage; i++)
                        {
                            <li class="@(Model.Pager.CurrentPage == i ? "page-item active" : "page-item")"><a class="page-link" asp-controller="Home" asp-action="index" asp-route-currenPage="@i">@i</a></li>
                        }
                        <li class="@(Model.Pager.CurrentPage == Model.Pager.TotalPages ? "page-item disabled" : "page-item")"><a class="page-link" asp-controller="Home" asp-action="index" asp-route-currenPage="@(Model.Pager.CurrentPage+1)">Next</a></li>
                        <li class="@(Model.Pager.CurrentPage == Model.Pager.TotalPages ? "page-item disabled" : "page-item")"><a class="page-link" asp-controller="Home" asp-action="index" asp-route-currenPage="@Model.Pager.TotalPages">Last</a></li>
                    </ul>
                </div>

            </div>
            <!-- /.row -->
        </div>
        <!-- /.col-lg-9 -->
    </div>
    <!-- /.row -->
</div>
<!-- /.container -->
