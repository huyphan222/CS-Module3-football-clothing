@model EditProductViewModel
@inject ShopManagement.AppDbContexts.AppDbContext context


@{
    ViewBag.Title = "Edit Product";
    Layout = "_LayoutDashBoard";
    var photoPath = "~/images/" + (Model.existingPhotoPath ?? "Default.jpg");
    var categories = context.categories.ToList();

}

<form enctype="multipart/form-data" asp-controller="Product" asp-action="EditProduct" class="mt-3">
    <div asp-validation-summary="All"></div>
    <div class="form-group row">
        <label asp-for="Name" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Name" class="form-control" placeholder="Name" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="OrigialPrice" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="OrigialPrice" class="form-control" placeholder="Price" />
            <span asp-validation-for="OrigialPrice" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Size" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Size" class="form-control" placeholder="Size" />
            <span asp-validation-for="Size" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="CategoryId" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <select asp-for="CategoryId" class="custom-select">
                <option>Select </option>
                @foreach (var category in categories)
                {
                    <option value="@category.CategoryId">@category.Name</option>
                }
            </select>
            
            <span asp-validation-for="CategoryId" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Description" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Description" class="form-control" placeholder="Description" />
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Discount" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Discount" class="form-control" placeholder="Discount" />
            <span asp-validation-for="Discount" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="PhotoPath" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <div class="custom-file">
                <input asp-for="PhotoPath" class="form-control custom-file-input" />
                <label class="custom-file-label">Chose file...</label>
            </div>
        </div>
    </div>

    <div class="form-group row col-sm-4 offset-4">
        <img src="@photoPath" style="width:350px;height:300px;" asp-append-version="true" />
    </div>

    <div class="form-group row">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-primary">Edit</button>
        </div>
    </div>
</form>

@section Scriptsion{
    <script>
        $(document).ready(function () {
            $('.custom-file-input').on("change", function () {
                var filename = $(this).val().split("\\").pop();
                $(this).next('.custom-file-label').html(filename);
            })
        });
    </script>
}